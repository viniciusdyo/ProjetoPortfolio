<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProjetoPortfolio.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjetoPortfolio.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark mb-3">
            <div class="container">
                <a class="navbar-brand text-primary fs-1" asp-area="" asp-controller="Home" asp-action="Index"><img src="https://media.discordapp.net/attachments/1100512643548205227/1134975584095703181/Ativo_6ae.png" width="120" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="Admin" asp-controller="Admin" asp-action="Index">HOME</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="Admin" asp-controller="AdminProjeto" asp-action="Index">PROJETOS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link  text-light" asp-area="Admin" asp-controller="AdminConteudo" asp-action="Index">CONTEUDO</a>
                        </li>
                        @*<li class="nav-item">
                            <a class="nav-link  text-light" asp-area="" asp-controller="AdminSobreMim" asp-action="Index">SOBRE MIM</a>
                        </li>*@
                    </ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                        @await Html.PartialAsync("_LogoutPartial");
                    }
                    else
                    {
                        <a asp-controller="Autenticacao" asp-action="Registrar">Logar/Registrar</a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>


    <footer class="border-top  text-primary bg-dark container-fluid">
        <div class="container">
            <div class="row">

                <p class="text-center">
                    &copy; 2023 - ViniDyo Portfólio - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </p>

            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/build/site.min.js" asp-append-version="true"></script>
    <script src="~/js/build/shared.min.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

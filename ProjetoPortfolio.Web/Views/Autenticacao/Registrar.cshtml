@model ProjetoPortfolio.Web.Models.RegistroViewModel

@{
    ViewData["Title"] = "Registrar";
}

<section class="container-fluid bg-dark-darker">
    <div class="container">
        <div class="row row-cols-2 g-3">
            <div class="col-4">
                @await Html.PartialAsync("_LoginPartial");
            </div>
            <div class="col-8 py-5">
                <h1 class="text-light mb-3">Registrar-se</h1>

                <hr class="border-primary" />
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="Criar" data-bs-theme="portfolio-dark" class="row row-cols-1 g-3" autocomplete="off">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="col">
                                <div class="form-floating">
                                    <input asp-for="UserName" class="form-control" placeholder="Nome de usuário" autocomplete="false" />
                                    <label asp-for="UserName" class="text-white">Nome de Usuário</label>
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-floating">
                                    <input asp-for="Email" class="form-control" placeholder="nome@examplo.com" autocomplete="false" />
                                    <label asp-for="Email" class="text-white"></label>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-floating">
                                    <input asp-for="Password" class="form-control" placeholder="Senha" autocomplete="false" />
                                    <label asp-for="Password" class="text-white">Senha</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-floating">
                                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Senha" autocomplete="false" />
                                    <label asp-for="ConfirmPassword" class="text-white">Confirmar Senha</label>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col form-group mt-5 mb-2">
                                <input type="submit" value="Registrar" class="btn btn-primary text-white" />
                            </div>
                        </form>
                    </div>
                </div>

                <div>
                    <a asp-controller="Home" asp-action="Index">Voltar para o início</a>
                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

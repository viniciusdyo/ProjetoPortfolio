<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProjetoPortfolio.Web.styles.css" asp-append-version="true" />
    @await Html.PartialAsync("_Favicons")



    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/devicons/devicon@v2.15.1/devicon.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-primary navbar-expand-sm navbar-toggleable-sm  bg-dark mb-3" data-bs-theme="portfolio-dark">
            <div class="container">
                <a class="navbar-brand text-primary fs-1 col-md-1 col-2" asp-area="" asp-controller="Home" asp-action="Index"><img class="col-12" src="https://media.discordapp.net/attachments/1100512643548205227/1134975584095703181/Ativo_6ae.png" aria-label="Logo do portfólio" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <i class="text-primary bi bi-list fs-1"></i>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Projeto" asp-action="Index">PROJETOS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link  text-light" asp-area="" asp-controller="SobreMim" asp-action="Index">SOBRE MIM</a>
                        </li>
                    </ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                        @await Html.PartialAsync("_LogoutPartial");
                    }
                    else
                    {
                        <a asp-controller="Autenticacao" asp-action="Registrar">Logar/Registrar</a>
                    }
                </div>
            </div>
        </nav>
    </header>

    <main id="mainContent" role="main" class="animacao-pagina pb-3">
        @RenderBody()
    </main>


    <footer class="footer-portfolio border-none  text-primary bg-principal-escura container-fluid">
        <div class="py-5">
            <div class="container">
                <div class="row d-flex justify-content-between">
                    <div class="col-4 d-flex my-auto flex-column">
                        <p class="text-start text-white">
                            <img src="https://media.discordapp.net/attachments/1100512643548205227/1134975584095703181/Ativo_6ae.png" width="30">
                            Desenvolvido por <a class="text-decoration-none text-primary" href="https://github.com/viniciusdyo" target=”_blank”>Vinicius Dyonisio</a> - Para mais informações acesse  <a class="text-decoration-none text-primary" asp-area="" asp-controller="Home" asp-action="Privacy">Sobre Mim</a>
                        </p>
                        <p class="text-start">
                            Todos os direitos reservados &copy; 2023 - Vinidy Portfólio
                        </p>

                    </div>
                    <div class="col-4 d-flex flex-column">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item bg-principal-escura">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
                            </li>
                            <li class="list-group-item bg-principal-escura">
                                <a class="nav-link text-light" asp-area="" asp-controller="Projeto" asp-action="Index">PROJETOS</a>
                            </li>
                            <li class="list-group-item bg-principal-escura">
                                <a class="nav-link  text-light" asp-area="" asp-controller="Home" asp-action="Privacy">SOBRE MIM</a>
                            </li>
                        </ul>
                    </div>

                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/build/site.min.js" asp-append-version="true"></script>
    <script src="~/js/build/shared.min.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
